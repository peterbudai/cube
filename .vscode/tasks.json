{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "make run",
            "problemMatcher": []
        },
        {
            "label": "Debug",
            "type": "shell",
            "command": "EXTRA_ARGS=\"-p\" make debug",
            "problemMatcher": []
        }
    ]
}